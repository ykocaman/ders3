@{
    ViewBag.Title = "Index";
}


<div class="panel panel-default">
    <div class="panel-heading">Giriş Yapın</div>
    <div class="panel-body">
        @if (ViewBag.GirisBasarisiz == true)
        {
            <div class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <span class="sr-only">Hata:</span>
                Giriş yapılamadı!
            </div>
        }

        <form class="form-horizontal" method="post">
            <div class="form-group">
                <label for="username" class="col-sm-2 control-label">Kullanıcı Adı :</label>
                <input class="form-control" name="username" placeholder="Kullanıcı adı" value="@Request.Form["username"]" />
            </div>
            <div class="form-group">
                <label for="username" class="col-sm-2 control-label">Parola :</label>
                <input class="form-control" name="password" type="password" placeholder="Parola" />
            </div>
            <button class="btn btn-success col-sm-offset-2">Giriş Yap</button>
        </form>
    </div>
</div>